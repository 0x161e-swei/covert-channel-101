
CFLAGS=-O0 -I /usr/local
CC=gcc


TARGETS=sender
UTILS=util.o 

all: $(TARGETS)

debug: CFLAGS += -DDEBUG -g
debug: $(TARGETS)

$(UTILS): %.o: %.c %.h
	$(CC) $(CFLAGS) -c $<

%.o: %.c util.h
	$(CC) $(CFLAGS)  -c $< 


$(TARGETS): %:%.o util.o
	$(CC) $(CFLAGS) $^ -o $@



run:
	./sender

.PHONY:	clean

clean:
	rm *.o $(HELPERS) $(TARGETS) 
